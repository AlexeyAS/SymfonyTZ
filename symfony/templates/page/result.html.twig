{% extends 'base.html.twig' %}

{% block title %}Результат{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            display: grid;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Результат теста ✅</h1>
        <div class="container text-uppercase mt-5 border">
            <div class="row border">
                <div class="col-6 font-weight-bold">имя</div>
                <div class="col-6">{{ result.name }}</div>
            </div>
            <div class="row border">
                <div class="col-4 font-weight-bold">Вопрос 1</div>
                {% if(answer1) %}
                    <div class="col-4 bg-success">{{ result.q1 }}</div>
                    <div class="col-4 bg-success">правильно</div>
                {% else %}
                    <div class="col-4 bg-danger">{{ result.q1 }}</div>
                    <div class="col-4 bg-danger">неправильно ({{ correct1 }})</div>
                {% endif %}
            </div>
            <div class="row border">
                <div class="col-4 font-weight-bold">Вопрос 2</div>
                {% if(answer2) %}
                    <div class="col-4 bg-success">{{ result.q2 }}</div>
                    <div class="col-4 bg-success">правильно</div>
                {% else %}
                    <div class="col-4 bg-danger">{{ result.q2 }}</div>
                    <div class="col-4 bg-danger">неправильно ({{ correct2 }})</div>
                {% endif %}
            </div>
            <div class="row border">
                <div class="col-4 font-weight-bold">Вопрос 3</div>
                {% if(answer3) %}
                    <div class="col-4 bg-success">{{ result.q3 }}</div>
                    <div class="col-4 bg-success">правильно</div>
                {% else %}
                    <div class="col-4 bg-danger">{{ result.q3 }}</div>
                    <div class="col-4 bg-danger">неправильно ({{ correct3 }})</div>
                {% endif %}
            </div>
        </div>
        <br><hr>
        <a href="{{ path('home') }}">На главную</a>
        <br>
        <a href="{{ path('all') }}">Все результаты</a>
    </div>
{% endblock %}
