{% extends 'base.html.twig' %}

{% block title %}Результат{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; display: grid; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Введите имя пользователя, далее выберите соответсвующий цвет ✅</h1>

        {{ form_start(usernameForm) }}
        {{ form_row(usernameForm.username, { label: 'Введите имя пользователя', errors: true, attr: { placeholder: 'Имя' }}) }}
        <br>
        <button type="submit" class="btn btn-success">Ввод</button>
        {{ form_end(usernameForm) }}

        {{ errorsForm }}
    </div>
{% endblock %}
