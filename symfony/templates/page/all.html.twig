{% extends 'base.html.twig' %}

{% block title %}Все результаты{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; display: grid; }
    </style>

    <div class="example-wrapper">
        <h1>Ответы пользователей ✅</h1>
        <div class="container">
            <hr>
        {% for element in data %}
<div class="row" style="text-transform: uppercase;">
    <div class="col-3">{{ element.username }}</div>
    <div class="col-3">{{ element.question1 }}</div>
    <div class="col-3">{{ element.question2 }}</div>
    <div class="col-3">{{ element.question3 }}</div>
</div>
            <hr>
        {% endfor %}
        </div>
        <br><hr>
        <a href="{{ path('home') }}">На главную</a>
    </div>
{% endblock %}
